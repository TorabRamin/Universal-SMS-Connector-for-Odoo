<odoo>
    <record id="view_sms_compose_wizard_form" model="ir.ui.view">
        <field name="name">sms.compose.wizard.form</field>
        <field name="model">sms.compose.wizard</field>
        <field name="arch" type="xml">
            <form string="Send SMS">
                <group>
                    <field name="provider_id" options="{'no_create': True}"/>
                    <field name="recipient_ids" placeholder="01712..., 88018..."/>
                </group>
                <group>
                    <field name="message" widget="text"/>
                </group>
                <div class="alert alert-info" role="alert">
                    <field name="char_count" readonly="1"/> Characters | 
                    <field name="segment_count" readonly="1"/> Segments | 
                    <span invisible="not is_unicode">UNICODE DETECTED</span>
                    <span invisible="is_unicode">GSM 7-bit</span>
                </div>
                <footer>
                    <button string="Send Now" name="action_send_sms" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_send_sms_wizard" model="ir.actions.act_window">
        <field name="name">Send SMS</field>
        <field name="res_model">sms.compose.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>